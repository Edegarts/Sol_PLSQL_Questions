/* 11 */

CREATE table Equipes(
                oid_Equipes number not null primary key AUTOINCREMENT,
                nome VARCHAR2,
				nome_b1 VARCHAR2,
				nome_b2 VARCHAR2,
				nome_b3 VARCHAR2,
				status CHAR(1)
);
ALTER TABLE Equipes ADD CONSTRAINT Equipes_Status column_name_check (status in ( '1', '0' ));
CREATE TABLE Tarefas(
                oid_Tarefas number not null primary key AUTOINCREMENT,
                nome VARCHAR2,
                data_criacao DATE,
                area VARCHAR2,
                equipe_responsavel VARCHAR2
);
ALTER TABLE Tarefas ADD CONSTRAINT equipe_responsavel_fk FOREIGN KEY (equipe_responsavel) REFERENCES Equipes (nome));

CREATE TABLE LOGs(
                oid_LOG number not null primary key AUTOINCREMENT,
                data_LOG DATE,
                subtipo number,
                natureza number
);

